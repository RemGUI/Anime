<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.AnimeDetailFragment">

    <ImageView
        android:id="@+id/anime_detail_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/anime2_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="No Game No Life"
        android:layout_marginStart="10dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/anime_detail_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/anime_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="No Game No Life"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/anime2_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
